extends VBoxContainer

signal stopped(pid: int)

@onready
var app_name: RichTextLabel = %Name
@onready
var pid: RichTextLabel = %Pid

#-----------------------------------------------------------------------------#
# Builtin functions
#-----------------------------------------------------------------------------#

func _ready() -> void:
	%Stop.pressed.connect(func() -> void:
		stopped.emit(pid.text.to_int())
	)

